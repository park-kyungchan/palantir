# Antigravity Managed Environment Configuration
# Source this file in your ~/.bashrc or load it manually

# Project Root
PROJECT_ROOT="/home/palantir/palantir_coding"

# NVM Configuration (Local)
export NVM_DIR="$PROJECT_ROOT/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# PYTHONPATH for ODA Migration
export PYTHONPATH="$PROJECT_ROOT/cow:${PYTHONPATH}"
alias oda='python -m cow.cli'

# Claude Code Token Limits
export CLAUDE_CODE_MAX_OUTPUT_TOKENS=100000
export CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS=100000
export MAX_MCP_OUTPUT_TOKENS=100000
export BASH_MAX_OUTPUT_LENGTH=200000

# Node.js heap size
export NODE_OPTIONS="--max-old-space-size=8192"

# Add local bin to PATH
if [ -d "$PROJECT_ROOT/.local/bin" ]; then
    export PATH="$PROJECT_ROOT/.local/bin:$PATH"
fi

# Visual Indication of Environment
export PS1="\[\033[01;35m\](Antigravity)\[\033[00m\] $PS1"
