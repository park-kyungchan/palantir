#!/usr/bin/env python3
"""
Orion CLI Entry Point (lib/oda) - ODA-RISK-006 Resolved
=======================================================
Uses proper Python packaging instead of sys.path manipulation.

This is a duplicate of scripts/orion for backward compatibility.
Prefer using the scripts/orion entry point or 'orion' command after pip install.
"""

def main():
    """Entry point for Orion CLI."""
    try:
        from lib.oda.runtime.kernel import OrionRuntime
        import asyncio
        asyncio.run(OrionRuntime().start())
    except ImportError as e:
        import sys
        print(f"Error: Package not installed. Run 'pip install -e .' first.")
        print(f"Details: {e}")
        sys.exit(1)

if __name__ == "__main__":
    main()
