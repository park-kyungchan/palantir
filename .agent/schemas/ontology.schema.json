{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Palantir Ontology Object Schema",
    "type": "object",
    "properties": {
        "apiName": {
            "type": "string",
            "description": "The unique API name of the object type (e.g., Employee)",
            "pattern": "^[A-Z][a-zA-Z0-9]*$"
        },
        "description": {
            "type": "string"
        },
        "primaryKey": {
            "type": "string",
            "description": "The property ID acting as the primary key"
        },
        "properties": {
            "type": "object",
            "additionalProperties": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "string",
                            "integer",
                            "double",
                            "boolean",
                            "date",
                            "timestamp"
                        ]
                    },
                    "description": {
                        "type": "string"
                    }
                },
                "required": [
                    "type"
                ]
            }
        }
    },
    "required": [
        "apiName",
        "primaryKey",
        "properties"
    ]
}