{
    "type": "object",
    "description": "Represents a logical execution flow (Chain of Thought).",
    "properties": {
        "task_id": {
            "type": "string",
            "description": "ID of the Task this trace belongs to."
        },
        "start_time": {
            "type": "string",
            "description": "ISO 8601 timestamp."
        },
        "end_time": {
            "type": "string",
            "description": "ISO 8601 timestamp."
        },
        "status": {
            "type": "string",
            "enum": [
                "RUNNING",
                "COMPLETED",
                "FAILED"
            ],
            "description": "Current status of the trace."
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Tags for filtering (e.g., 'refactor', 'bugfix')."
        }
    },
    "required": [
        "task_id",
        "start_time",
        "status"
    ]
}