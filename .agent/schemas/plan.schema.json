{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Plan",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique Plan UUID"
        },
        "type": {
            "type": "string",
            "description": "Type discriminator",
            "default": "Plan"
        },
        "created_at": {
            "type": "string",
            "format": "date-time"
        },
        "meta_version": {
            "type": "integer",
            "default": 1,
            "description": "Metadata version"
        },
        "plan_id": {
            "type": "string",
            "description": "User-facing Plan ID"
        },
        "objective": {
            "type": "string",
            "description": "High-level objective"
        },
        "ontology_impact": {
            "type": "array",
            "items": {
                "type": "string"
            },
            "description": "Impacted Ontology Concepts",
            "default": []
        },
        "jobs": {
            "type": "array",
            "items": {
                "$ref": "job.schema.json"
            },
            "description": "List of executable jobs"
        }
    },
    "required": [
        "id",
        "plan_id",
        "objective",
        "jobs"
    ]
}