{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Insight Object",
    "description": "An atomic unit of declarative knowledge representing a fact, preference, or conclusion.",
    "type": "object",
    "properties": {
        "id": {
            "type": "string",
            "description": "Unique Identifier (INS-{uuid})"
        },
        "type": {
            "type": "string",
            "const": "Insight"
        },
        "meta": {
            "type": "object",
            "properties": {
                "created_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "updated_at": {
                    "type": "string",
                    "format": "date-time"
                },
                "confidence_score": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0,
                    "description": "Reliability of this insight (0.0 to 1.0)"
                },
                "decay_factor": {
                    "type": "number",
                    "description": "Rate at which this memory fades if unused"
                }
            },
            "required": [
                "created_at",
                "updated_at",
                "confidence_score"
            ]
        },
        "provenance": {
            "type": "object",
            "properties": {
                "source_episodic_ids": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "Links to raw log files (LOG-{id}) that generated this insight"
                },
                "method": {
                    "type": "string",
                    "enum": [
                        "heuristic_mining",
                        "manual_entry",
                        "llm_inference",
                        "textrank"
                    ]
                }
            },
            "required": [
                "method"
            ]
        },
        "content": {
            "type": "object",
            "properties": {
                "summary": {
                    "type": "string"
                },
                "domain": {
                    "type": "string"
                },
                "tags": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            },
            "required": [
                "summary",
                "domain"
            ]
        },
        "relations": {
            "type": "object",
            "properties": {
                "supports": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "contradicts": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                },
                "related_to": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "id",
        "type",
        "meta",
        "content"
    ]
}