{
    "type": "object",
    "description": "Represents a discrete event within a Trace.",
    "properties": {
        "trace_id": {
            "type": "string",
            "description": "ID of the Trace this event belongs to."
        },
        "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp."
        },
        "event_type": {
            "type": "string",
            "enum": [
                "ACTION_START",
                "ACTION_END",
                "ERROR",
                "STATE_CHANGE",
                "THOUGHT"
            ],
            "description": "Type of the event."
        },
        "component": {
            "type": "string",
            "description": "Component that generated the event (e.g., 'ReasoningEngine', 'ActionRegistry')."
        },
        "details": {
            "type": "object",
            "description": "Structured details (e.g., action name, arguments, error message)."
        }
    },
    "required": [
        "trace_id",
        "timestamp",
        "event_type",
        "component"
    ]
}