{
    "type": "object",
    "description": "Represents quantitative performance data.",
    "properties": {
        "trace_id": {
            "type": "string",
            "description": "ID of the Trace context."
        },
        "name": {
            "type": "string",
            "description": "Name of the metric (e.g., 'execution_time_ms', 'tokens_used')."
        },
        "value": {
            "type": "number",
            "description": "Numeric value of the metric."
        },
        "unit": {
            "type": "string",
            "description": "Unit of measurement (e.g., 'ms', 'count')."
        },
        "timestamp": {
            "type": "string",
            "description": "ISO 8601 timestamp."
        }
    },
    "required": [
        "name",
        "value",
        "timestamp"
    ]
}