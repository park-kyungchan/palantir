# COW CLI Environment Variables
# Copy this file to .env and fill in your values

# =============================================================================
# Mathpix API Configuration (Required for OCR)
# =============================================================================
# Get your API credentials from: https://mathpix.com/
COW_MATHPIX_APP_ID=your_app_id_here
COW_MATHPIX_APP_KEY=your_app_key_here

# =============================================================================
# COW CLI Configuration
# =============================================================================
# Path to configuration file (optional, defaults to ~/.cow/config.yaml)
COW_CONFIG_PATH=

# Default output directory for processed files
COW_OUTPUT_DIR=./output

# Log level (DEBUG, INFO, WARNING, ERROR)
COW_LOG_LEVEL=INFO

# =============================================================================
# Review Queue Configuration
# =============================================================================
# Path to review database (optional, defaults to ~/.cow/review.db)
COW_REVIEW_DB_PATH=

# Confidence threshold for auto-approval (0.0-1.0)
COW_AUTO_APPROVE_THRESHOLD=0.95

# Confidence threshold for rejection (0.0-1.0)
COW_REJECT_THRESHOLD=0.80

# =============================================================================
# Cache Configuration
# =============================================================================
# Enable/disable response caching
COW_CACHE_ENABLED=true

# Cache directory (optional, defaults to ~/.cow/cache)
COW_CACHE_DIR=

# Cache TTL in seconds (default: 86400 = 24 hours)
COW_CACHE_TTL=86400

# =============================================================================
# Performance Configuration
# =============================================================================
# Maximum concurrent batch processing jobs
COW_MAX_WORKERS=4

# Batch size for processing
COW_BATCH_SIZE=10

# Request timeout in seconds
COW_REQUEST_TIMEOUT=30

# =============================================================================
# Monitoring (Optional)
# =============================================================================
# Enable Prometheus metrics endpoint
COW_METRICS_ENABLED=false

# Metrics port
COW_METRICS_PORT=9090
