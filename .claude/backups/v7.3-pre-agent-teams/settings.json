{
  "env": {
    "ORION_WORKSPACE_ROOT": "/home/palantir",
    "ORION_PROJECTS": "hwpx,lib/owpml",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "permissions": {
    "allow": [
      "Read(/home/palantir/**)",
      "Edit(/home/palantir/**)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Bash(rm:-rf:*)",
      "Bash(sudo:rm:*)",
      "Bash(chmod:777:*)"
    ],
    "additionalDirectories": [
      "/home/palantir",
      "/home/palantir/.claude",
      "/home/palantir/park-kyungchan/palantir/Ontology-Definition",
      "/home/palantir/hwpx"
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true
  },
  "language": "Korean"
}
