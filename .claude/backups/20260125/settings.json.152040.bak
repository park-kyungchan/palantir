{
  "env": {
    "ORION_WORKSPACE_ROOT": "/home/palantir",
    "ORION_PROJECTS": "hwpx,lib/owpml",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "permissions": {
    "allow": [
      "Read(/home/palantir/**)",
      "Edit(/home/palantir/**)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Bash(rm:-rf:*)",
      "Bash(sudo:rm:*)",
      "Bash(chmod:777:*)"
    ],
    "additionalDirectories": [
      "/home/palantir",
      "/home/palantir/.claude",
      "/home/palantir/park-kyungchan/palantir/Ontology-Definition",
      "/home/palantir/hwpx"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-start.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/welcome.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-end.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash|Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/governance-check.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/auto-backup.sh"
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-task-interceptor.sh"
          }
        ]
      },
      {
        "matcher": "Edit|Write|Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-context-injector.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-task-processor.sh"
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/clarify-qa-logger.sh"
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-health.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline/statusline.sh"
  },
  "language": "Korean"
}
