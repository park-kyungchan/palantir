{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "128000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "permissions": {
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Bash(rm -rf *)",
      "Bash(sudo rm *)",
      "Bash(chmod 777 *)"
    ]
  },
  "hooks": {
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-subagent-start.sh",
            "timeout": 10,
            "statusMessage": "Injecting team context to new agent"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-subagent-stop.sh",
            "timeout": 10,
            "statusMessage": "Validating agent output artifacts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-task-update.sh",
            "timeout": 10,
            "statusMessage": "Logging task state change"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-pre-compact.sh",
            "timeout": 30,
            "statusMessage": "Saving orchestration state before compaction"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-session-compact.sh",
            "timeout": 15,
            "statusMessage": "DIA recovery after compaction",
            "once": true
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-teammate-idle.sh",
            "timeout": 10,
            "statusMessage": "Checking teammate output completeness"
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-task-completed.sh",
            "timeout": 10,
            "statusMessage": "Validating task completion artifacts"
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-tool-failure.sh",
            "timeout": 10,
            "statusMessage": "Logging tool execution failure"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true
  },
  "language": "Korean",
  "fastMode": true,
  "teammateMode": "tmux"
}
