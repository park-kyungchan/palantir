{
  "env": {
    "ORION_WORKSPACE_ROOT": "/home/palantir",
    "ORION_PROJECTS": "hwpx,lib/owpml",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "permissions": {
    "allow": [
      "Read(/home/palantir/**)",
      "Edit(/home/palantir/**)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Bash(rm:-rf:*)",
      "Bash(sudo:rm:*)",
      "Bash(chmod:777:*)"
    ],
    "additionalDirectories": [
      "/home/palantir",
      "/home/palantir/.claude",
      "/home/palantir/park-kyungchan/palantir/Ontology-Definition",
      "/home/palantir/hwpx"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-start.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/welcome.sh"
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-end.sh"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/governance-check.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/security-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/governance-check.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/auto-backup.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/context-recovery-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/l2l3-access-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/task-first-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/read-before-edit-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/sensitive-files-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/workload-path-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/sensitive-files-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-task-interceptor.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-context-injector.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/context-recovery-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "TaskCreate",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/context-recovery-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/sequential-thinking-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/orchestrating-l2l3-synthesis-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/context-recovery-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/blocked-task-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/output-preservation-gate.sh",
            "timeout": 5000
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/task-lifecycle-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "EnterPlanMode",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/plan-mode-gate.sh",
            "timeout": 5000
          }
        ]
      },
      {
        "matcher": "Skill",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/pipeline-order-gate.sh",
            "timeout": 5000
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Task",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/task-pipeline/pd-task-processor.sh"
          }
        ]
      },
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/clarify-qa-logger.sh"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/tracking/read-tracker.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "TaskCreate|TaskUpdate",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/tracking/task-tracker.sh",
            "timeout": 3000
          }
        ]
      },
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-health.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash ~/.claude/statusline.sh"
  },
  "language": "Korean"
}
