{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "env": {
    "ORION_WORKSPACE_ROOT": "/home/palantir",
    "ORION_PROJECTS": "hwpx,lib/owpml",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "64000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000"
  },
  "permissions": {
    "allow": [
      "Read(/home/palantir/**)",
      "Edit(/home/palantir/**)",
      "Bash(python:*)",
      "Bash(pytest:*)",
      "Bash(git:*)",
      "Bash(npm:*)",
      "Bash(ls:*)",
      "Bash(find:*)",
      "Bash(cat:*)",
      "mcp__sequential-thinking__sequentialthinking",
      "TaskCreate",
      "TaskUpdate",
      "TaskList",
      "TaskGet"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Bash(rm -rf *)",
      "Bash(sudo rm *)",
      "Bash(chmod 777 *)"
    ],
    "additionalDirectories": [
      "/home/palantir",
      "/home/palantir/.claude",
      "/home/palantir/park-kyungchan/palantir/Ontology-Definition",
      "/home/palantir/hwpx"
    ]
  },
  "hooks": {
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-start.sh",
            "statusMessage": "Initializing session..."
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/welcome.sh"
          }
        ]
      }
    ],
    "UserPromptSubmit": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/user-prompt-submit.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/auto-backup.sh"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/sensitive-files-gate.sh",
            "timeout": 5
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/enforcement/sensitive-files-gate.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PermissionRequest": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/permission-request-handler.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "AskUserQuestion",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/clarify-qa-logger.sh"
          }
        ]
      },
      {
        "matcher": "Read",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/tracking/read-tracker.sh",
            "timeout": 3
          }
        ]
      },
      {
        "matcher": "Write|Edit",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/async-test-runner.sh",
            "async": true,
            "timeout": 300,
            "statusMessage": "Running tests in background..."
          }
        ]
      }
    ],
    "PostToolUseFailure": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/tool-failure-handler.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Notification": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/notification-router.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "SubagentStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/subagent-start.sh"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/subagent-stop.sh",
            "timeout": 5
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "prompt",
            "prompt": "Check if there are uncompleted tasks that should be finished before stopping. Context: $ARGUMENTS. If stop_hook_active is true, approve the stop to prevent infinite loops. Otherwise check if all assigned in_progress tasks are complete. Return {\"ok\": true} to allow stop or {\"ok\": false, \"reason\": \"description of remaining work\"} to continue.",
            "timeout": 15
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/pre-compact-save.sh",
            "statusMessage": "Saving context before compaction..."
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/session-end.sh"
          }
        ]
      }
    ]
  },
  "statusLine": {
    "type": "command",
    "command": "bash /home/palantir/.claude/statusline.sh"
  },
  "enabledPlugins": {
    "superpowers@claude-plugins-official": true
  },
  "language": "Korean"
}
