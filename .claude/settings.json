{
  "env": {
    "CLAUDE_CODE_EXPERIMENTAL_AGENT_TEAMS": "1",
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "128000",
    "CLAUDE_CODE_FILE_READ_MAX_OUTPUT_TOKENS": "100000",
    "MAX_MCP_OUTPUT_TOKENS": "100000",
    "BASH_MAX_OUTPUT_LENGTH": "200000",
    "ENABLE_TOOL_SEARCH": "auto:7",
    "SLASH_COMMAND_TOOL_CHAR_BUDGET": "56000",
    "CLAUDE_AUTOCOMPACT_PCT_OVERRIDE": "90"
  },
  "permissions": {
    "allow": [
      "Bash(*)",
      "mcp__sequential-thinking__sequentialthinking",
      "WebFetch(domain:github.com)",
      "WebFetch(domain:raw.githubusercontent.com)",
      "WebSearch",
      "mcp__context7__resolve-library-id",
      "mcp__context7__query-docs",
      "mcp__tavily__search",
      "TaskUpdate",
      "TaskCreate"
    ],
    "deny": [
      "Read(.env*)",
      "Read(**/secrets/**)",
      "Read(**/*credentials*)",
      "Read(**/.ssh/id_*)",
      "Bash(sudo rm *)",
      "Bash(chmod 777 *)",
      "Read(~/.ssh/*)",
      "Read(~/.aws/*)",
      "Read(~/.config/gcloud/*)",
      "Bash(rm -rf *)",
      "Bash(git push --force *)",
      "Bash(git reset --hard *)",
      "Bash(git checkout . *)"
    ],
    "defaultMode": "delegate"
  },
  "hooks": {
    "SubagentStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-subagent-start.sh",
            "timeout": 10,
            "statusMessage": "Injecting team context to new agent"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-pre-compact.sh",
            "timeout": 30,
            "statusMessage": "Saving orchestration state before compaction"
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "matcher": "compact",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-session-compact.sh",
            "timeout": 15,
            "statusMessage": "Recovery after compaction"
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "matcher": "implementer|infra-implementer",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-implementer-done.sh",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionEnd": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-session-end.sh",
            "timeout": 10,
            "statusMessage": "Cleaning up session temp files"
          }
        ]
      }
    ],
    "TaskCompleted": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/on-task-completed.sh",
            "timeout": 10,
            "statusMessage": "Checking task completion quality"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/anti-rm-rf.sh",
            "timeout": 5,
            "statusMessage": "Checking for destructive commands"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/anti-push-main.sh",
            "timeout": 5,
            "statusMessage": "Checking git push safety"
          },
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/input-modifier.sh",
            "timeout": 5,
            "statusMessage": "Checking git commit co-author"
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/input-modifier.sh",
            "timeout": 5,
            "statusMessage": "Checking file lock and path safety"
          }
        ]
      },
      {
        "matcher": "TaskOutput",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/block-taskoutput-relay.sh",
            "timeout": 5,
            "statusMessage": "Checking for Data Relay Tax"
          }
        ]
      },
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/budget-monitor.sh",
            "timeout": 5,
            "statusMessage": "Monitoring tool budget"
          }
        ]
      }
    ],
    "TeammateIdle": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/idle-quality-gate.sh",
            "timeout": 10,
            "statusMessage": "Verifying teammate produced output"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "/home/palantir/.claude/hooks/anti-rationalization.sh",
            "timeout": 10,
            "statusMessage": "Checking for rationalization cop-outs"
          }
        ]
      }
    ]
  },
  "enabledPlugins": {
    "superpowers-developing-for-claude-code@superpowers-marketplace": true,
    "superpowers@superpowers-marketplace": true,
    "everything-claude-code@everything-claude-code": true
  },
  "alwaysThinkingEnabled": true,
  "promptSuggestionEnabled": true,
  "skipDangerousModePermissionPrompt": true,
  "teammateMode": "tmux",
  "model": "haiku"
}
