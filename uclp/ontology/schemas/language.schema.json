{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UCLP Language",
    "type": "object",
    "properties": {
        "language_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "philosophy_summary": {
            "type": "string"
        },
        "idiomatic_patterns": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "type": "string"
                    },
                    "usage": {
                        "type": "string"
                    },
                    "philosophy": {
                        "type": "string"
                    }
                }
            }
        }
    },
    "required": [
        "language_id",
        "name"
    ]
}