{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "UCLP Concept",
    "type": "object",
    "properties": {
        "concept_id": {
            "type": "string"
        },
        "name": {
            "type": "string"
        },
        "category": {
            "type": "string"
        },
        "prerequisites": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "related_concepts": {
            "type": "array",
            "items": {
                "type": "string"
            }
        }
    },
    "required": [
        "concept_id",
        "name",
        "category"
    ]
}