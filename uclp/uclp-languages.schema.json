{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://uclp.dev/schema/v3.0.0/languages",
  "title": "UCLP v3.0.0 Language Foundations Schema",
  "type": "object",
  "required": ["version", "languages"],
  "properties": {
    "version": {
      "type": "string",
      "const": "3.0.0",
      "description": "Protocol version"
    },
    "languages": {
      "type": "object",
      "description": "Map of language IDs to their foundation definitions",
      "patternProperties": {
        "^[a-z]+$": {
          "$ref": "#/definitions/language_entry"
        }
      },
      "minProperties": 1
    }
  },
  "definitions": {
    "language_entry": {
      "type": "object",
      "required": ["name", "philosophy", "key_features", "paradigm"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Display name (e.g., 'TypeScript')"
        },
        "paradigm": {
          "type": "array",
          "items": { "type": "string" }
        },
        "philosophy": {
          "type": "string",
          "description": "Core design philosophy summary"
        },
        "key_features": {
          "type": "array",
          "items": { "type": "string" }
        },
        "best_for": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    }
  }
}
